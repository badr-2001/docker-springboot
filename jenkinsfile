pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        GITHUB_CREDENTIALS = 'github-crd'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master',
                    credentialsId: "${env.GITHUB_CREDENTIALS}",
                    url: 'https://github.com/badr-2001/docker-springboot.git'
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'Running Maven build...'
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running Maven tests...'
                sh 'mvn test'
            }
        }

        stage("Build Docker Images") {
            steps {
                echo "Building .............."
                sh 'docker build -t badr200199/front_demo dockerfile-front'
                sh 'docker build -t badr200199/backend .'
                sh 'docker build -t badr200199/db dockerfile-postgress'
            }
        }
    }
}
